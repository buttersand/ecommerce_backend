{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@logger": ["logger/index.ts"],
      "@auth": ["auth.ts"],
      "@db": ["db.ts"],
      "@middleware/*": ["middleware/*"],
      "@utils/*": ["utils/*"],
      "@config": ["config/env.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
